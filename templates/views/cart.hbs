<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"
    />
    <link rel="stylesheet" href="../../css/cart.css" />
  </head>
  <body>
    <!-- Navbar starts -->
    {{>navbar}}
    <!-- Navbar ends -->

    <!-- Cart secton starts -->
    <section class="d-flex justify-content-center align-items-center box">
      <div
        class="cart-page d-flex flex-column align-items-center"
      >
        <table>
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <div class="cart-info">
                  <img
                    src="https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/5b8aa82f-e010-4052-a2e6-d81db2729fd0/air-force-1-high-07-lx-shoes-wb31gJ.png"
                    alt="Air Force 1 High '07 LX Shoes"
                  />
                  <div class="content">
                    <p class="pname">Air Force 1 High '07 LX</p>
                    <p class="price py-1">Price ₹500.00</p>
                    <a href="#">Remove</a>
                  </div>
                </div>
              </td>
              <td>
                <input
                  type="number"
                  id="input1"
                  class="form-control"
                  value="1"
                />
              </td>
              <td>₹500.00</td>
            </tr>
            <tr>
              <td>
                <div class="cart-info">
                  <img
                    src="https://static.nike.com/a/images/t_PDP_1728_v1/f_auto,q_auto:eco/164b0ac6-7e73-4138-883c-1db81177787b/court-vision-low-shoes-Fh1wdP.png"
                    alt="Court Vision Low"
                  />
                  <div class="content">
                    <p class="pname">Court Vision Low</p>
                    <p class="price py-1">Price ₹500.00</p>
                    <a href="#">Remove</a>
                  </div>
                </div>
              </td>
              <td>
                <input
                  type="number"
                  id="input2"
                  class="form-control"
                  value="1"
                />
              </td>
              <td>₹500.00</td>
            </tr>
            <tr>
              <td>
                <div class="cart-info">
                  <img
                    src="https://static.nike.com/a/images/t_PDP_1728_v1/f_auto,q_auto:eco/164b0ac6-7e73-4138-883c-1db81177787b/court-vision-low-shoes-Fh1wdP.png"
                    alt="Dunk High Premium"
                  />
                  <div class="content">
                    <p class="pname">Dunk High Premium</p>
                    <p class="price py-1">Price ₹500.00</p>
                    <a href="#">Remove</a>
                  </div>
                </div>
              </td>
              <td>
                <input
                  type="number"
                  id="input3"
                  class="form-control"
                  value="1"
                />
              </td>
              <td>₹500.00</td>
            </tr>
            <!-- Other rows... -->
          </tbody>
        </table>
        <div class="w-100 d-flex justify-content-end">
          <div class="d-flex justify-content-between box2 py-2">
            <span class="fw-bold total">Total:</span>
            <span>₹1500.00</span>
          </div>
        </div>
      </div>
    </section>
    <!-- Cart secton ends -->

    <!-- footer starts -->
    <footer class="footer py-4">
      {{>footer}}
    </footer>
    <!-- footer ends -->

    <script>
      //   document.getElementById("myInput").addEventListener("input", function () {
      //     var inputValue = this.value; // Get the current value of the input field
      //     if (inputValue < 1) {
      //       this.value = 1; // Update the value to 1 if it is less than 1
      //     }
      //   });
      var inputs = document.querySelectorAll('input[type="number"]');

      for (var i = 0; i < inputs.length; i++) {
        inputs[i].addEventListener("input", function () {
          if (this.value < 1) {
            this.value = 1;
          }
        });
      }
    </script>
    <script type="module" src="../../modules/cart.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
